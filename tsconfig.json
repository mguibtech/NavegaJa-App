{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["jest"],
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@hooks": ["src/hooks"],
      "@routes": ["src/routes"],
      "@screens": ["src/screens"],
      "@theme": ["src/theme"],
      "@domain": ["src/domain"],
      "@api": ["src/api"],
      "@types": ["src/types"],
      "@utils": ["src/utils"],
      "@infra": ["src/infra"],
      "@services": ["src/services"],
      "@config": ["src/config"],
      "@store": ["src/store"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
